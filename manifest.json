{
  "manifest_version": 3,
  "name": "Focus Bar by TodoBud",
  "description": "Write your intention and follow through",
  "version": "1.1",
  "action": {
    "default_popup": "src/hello.html",
    "default_icon": "icons/128.png"
  },
  "icons": {
    "16":"icons/16.png",
    "32":"icons/32.png",
    "48":"icons/48.png",
    "128":"icons/128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}