{
  "manifest_version": 3,
  "name": "Focus Bar",
  "description": "The bar starts with the question: 'What is your intent?' Write your intention it will remind you at every tab",
  "version": "2.0.0.2",
  "action": {
    "default_popup": "src/hello.html",
    "default_icon": "icons/128.png"
  },
  "icons": {
    "16":"icons/16.png",
    "32":"icons/32.png",
    "48":"icons/48.png",
    "128":"icons/128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
